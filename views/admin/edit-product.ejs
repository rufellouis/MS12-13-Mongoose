<%- include('../includes/head.ejs') %>
  <link rel="stylesheet" href="/css/forms.css">
  <link rel="stylesheet" href="/css/product.css">
</head>
<body>
  <%- include('../includes/nav.ejs') %>
  <main>
    <form
      class="product-form"
      action="/admin/<% if(editing) { %>edit-product<% } else { %>add-product<% } %>"
      method="POST"
    >
      <div class="form-control">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<% if(editing) { %><%= prod.title %><% } %>">
      </div>
      <div class="form-control">
        <label for="image_url">Image URL</label>
        <input type="text" name="image_url" id="image_url" value="<% if(editing) { %><%= prod.image_url %><% } %>">
      </div>
      <div class="form-control">
        <label for="price">Price</label>
        <input type="number" step="0.01" name="price" id="price" value="<% if(editing) { %><%= prod.price %><% } %>">
      </div>
      <div class="form-control">
        <label for="description">Description</label>
        <textarea name="description" id="description" rows="5"><% if(editing) { %><%= prod.description %><% } %></textarea>
      </div>
      <div class="form-control">
        <input type="hidden" name="id" value="<% if(editing) { %><%= prod._id %><% } %>">
      </div>
      <button class="btn" type="submit">
        <% if(editing) { %>Update Product<% } else { %>Add Product<% } %>
      </button>
    </form>
  </main>
<%- include('../includes/end.ejs') %>
